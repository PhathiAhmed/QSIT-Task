@model List<Map>
<a asp-action="Save" class="btn btn-primary my-4">
    <i class="fa-solid fa-circle-plus"></i>
    Add New Configration
</a>
<div class="alert alert-primary @(Model.Any() ? "d-none" : "")">
    No Configration added yet!
</div>
<table class="table table-bordered  table-striped @(!Model.Any() ? "d-none" : "")">
    <thead>
        <tr class=" ">
            <th class="text-center">
                Cluster Reduis
            </th>
            <th class="text-center">
                Geo-Fencing
            </th>
            <th class="text-center">
                Time
            </th>
            <th class="text-center">
                Location
            </th>
            <th class="text-center">
                Duration
            </th>
            <th class="text-center">
                Map Type
            </th>
            <th class="text-center">
                Map Sub Type
            </th>
            <th class="text-center ">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td class="text-center font-weight-bold align-middle table-active">
                    @*@Html.DisplayFor(modelItem => item.Raduis)*@
                    @item.Raduis
                    </td>
                    
                    <td class="text-center align-middle table-primary">
                        @if(item.Geo_Fencing==true)
                        {
                            @Html.Encode("Yes")
                        }
                        else
                        {
                            @Html.Encode("No")
                        }
                    </td>
                
                <td class="text-center align-middle table-active">
                    @Html.DisplayFor(modelItem => item.Time)
                    </td>
                <td class="text-center align-middle table-active">
                    @Html.DisplayFor(modelItem => item.Location)
                    </td>
                <td class="text-center align-middle table-active">
                    @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                <td class="text-center align-middle table-active">
                    @Html.DisplayFor(modelItem => item.MapType.Name)
                    </td>
                <td class="text-center align-middle table-active">
                        @Html.DisplayFor(modelItem => item.MapSubType.Name)
                    </td>
                    

                <td class="btn-group text-center align-middle  table-active">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary my-2 align-middle ">
                            <i class="fa-solid fa-pencil"></i>
                        Edit
                        </a>
                        @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary my-2 ">
                            <i class="fa-solid fa-info"></i>
                        Details
                        </a>*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger my-2 align-middle ">
                            <i class="fa-solid fa-trash"></i>
                        Delete
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script>
        $(document).ready(function () {
            toastr.options = {
                "preventDuplicates": true
            }
            var message = $('#Message').text();
            if (message !== '') {
                toastr.success(message);
            
    </script>
}


